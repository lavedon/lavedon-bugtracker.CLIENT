@inherits DialogCode

@if (Show)
{
    <div class="dialog-container">
        <div class="dialog">
            <div class="dialog-title">@Title</div>
            <div class="dialog-body">@Body</div>
            <div class="dialog-buttons">
                <button class="btn btn-dark mr-4" @onclick="OnOk">
                    Close
                </button>
            </div>
        </div>
    </div>
}
